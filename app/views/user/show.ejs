<hr />
<div class="row">
  <div class="col-md-3">
    <img class="img-circle" src="<%- user.avatar + '&s=440' %>" width="220" heigth="220" />
  </div>
  <div class="col-md-6">
    <h1>
      <%- makeGutHubLink(user) %>
      <br/><small><%- user.location %></small>
    </h1>
    Author of <%- user.authorOf.length %> and contributor in <%- contributions.length %> public repos.
  </div>
  <div class="col-md-3">
    <h1>&nbsp;</h1>
    <dl class="dl-horizontal">
      <dt> GitHub Followers: </dt>
      <dd> <%- user.followers %> </dd>
      <dt> Following in GitHub: </dt>
      <dd> <%- user.following %> </dd>
      <dt> Contributor's karma: </dt>
      <dd> <%- user.nishkamKarma %> </dd>
      <dt> Author's karma: </dt>
      <dd> <%- user.kriyamanaKarma %> </dd>
    </dl>
  </div>
</div>

<hr/>

<ul class="nav nav-tabs">
  <li class="active"><a href="#karma" data-toggle="tab">Karma</a></li>
  <li><a href="#contributions" data-toggle="tab">Contributions</a></li>
</ul>

<div class="tab-content">
  <div class="tab-pane active" id="karma">

<% if (Object.keys(karma.week.p).length) { %>
<div class="row">
  <div class="col-md-6">
    <h1>weekly gain<br/><small>gained for activity in <%- Object.keys(karma.week.p).length %> projects</small></h1>
    <ul class="list-group">
      <% Object.keys(karma.week.p).forEach(function(id) { %>
      <li class="list-group-item">
        <span class="badge"><%- karma.week.p[id].map(function(x) { return x.gain; }).reduce(function(s,x) { return s + x }) %></span>
        <%- karma.week.p[id].length %> commit<%- karma.week.p[id].length >1?'s': '' %> to <%- makeGutHubLink(karma.projects[id] && karma.projects[id].name) %>
      </li>
      <% }) %>
    </ul>
  </div>
  <div class="col-md-6" style="text-align:right">
    <h1>
      <%- karma.week.c %>
      <small>as contributor</small>
    </h1>
    <h1>
      <%- karma.week.a %>
      <small>as author</small>
    </h1>
  </div>
</div>

<hr />

<% } %>

<% if (Object.keys(karma.month.p).length) { %>
<div class="row">
  <div class="col-md-6">
    <h1>monthly gain<br/><small>for activity in <%- Object.keys(karma.month.p).length %> projects</small></h1>
